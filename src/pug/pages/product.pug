                        .qnt-check-item
                          input#cake-1-tier-3(type="radio" name="cake-1-tier" value="cake-1-tier-3")
                          label(for="cake-1-tier-3") 3
                        .qnt-check-item
                          input#cake-1-tier-4(type="radio" name="cake-1-tier" value="cake-1-tier-4")
                          label(for="cake-1-tier-4") 4
                      .catalog-card__form-group.catalog-card__form-group--price
                        .catalog-card__weight
                          label(for="cake-1-weight").sr-only Вес
                          select.js-select-dotted#cake-1-weight
                            option(name="3 кг" selected) 3 кг
                            option(name="4 кг") 4 кг
                            option(name="5 кг") 5 кг
                        .catalog-card__price 4 960 ₽
                  .catalog-card__quantity
                  .catalog-card__button
                    button.btn.btn-primary.btn-block(type="submit") В корзину
              .catalog-item(role="listitem")
                .catalog-card
                  .catalog-card__pic
                    a(href="#" title="Торт «1041 Белоснежный с розами»")
                      img(src="static/img/content/cupcake.jpg" alt="Торт «1041 Белоснежный с розами»")
                  .catalog-card__body
                    .catalog-card__title
                      a(href="#") Торт «1041 Белоснежный с розами»
                    .catalog-card__modify
                      .catalog-card__form-group
                        label(for="cake-2-select").sr-only Выберите
                        select.js-select-dotted#cake-2-select
                          option(name="Медовик" selected) Медовик
                          option(name="Медовичок") Медовичок
                          option(name="Медовичок Xs Max 512GB") Медовичок Xs Max 512GB
                      .catalog-card__form-group
                        span.qnt-check-label Ярусов
                        .qnt-check-item
                          input#cake-2-tier-2(type="radio" name="cake-2-tier" value="cake-2-tier-2" checked)
                          label(for="cake-1-tier-2") 2
                        .qnt-check-item
                          input#cake-2-tier-3(type="radio" name="cake-2-tier" value="cake-2-tier-3")
                          label(for="cake-1-tier-3") 3
                        .qnt-check-item
                          input#cake-2-tier-3(type="radio" name="cake-2-tier" value="cake-2-tier-4")
                          label(for="cake-2-tier-4") 4
                      .catalog-card__form-group.catalog-card__form-group--price
                        .catalog-card__weight
                          label(for="cake-2-weight").sr-only Вес
                          select.js-select-dotted#cake-2-weight
                            option(name="3 кг" selected) 3 кг
                            option(name="4 кг") 4 кг
                            option(name="5 кг") 5 кг
                        .catalog-card__price 4 960 ₽
                  .catalog-card__quantity
                  .catalog-card__button
                    button.btn.btn-primary.btn-block(type="submit") В корзину
